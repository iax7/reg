<h2><%= plural_table_name.titleize %></h2>
<div class="row">
  <div class="col-sm-10"></div>
  <div class="col-sm-2">
    <a class="btn btn-xs btn-primary" aria-label="Left Align" href="<%%= url_for new_<%= singular_table_name %>_path %>">
      <span class="glyphicon glyphicon-plus"></span> Nuevo</a>
  </div>
</div>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%%= label :<%= singular_table_name %>, :<%= attribute.name  %> %></th>
<% end -%>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
        <td><div class="btn-group">
              <a class="btn btn-default btn-xs" href="<%%= url_for <%= singular_table_name %> %>">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Mostrar</a>
              <a class="btn btn-default btn-xs" href="<%%= url_for edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %>">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Editar</a>
              <a class="btn btn-danger btn-xs" href="<%%= url_for <%= singular_table_name %> %>" data-method="delete" data-confirm="¿Estás seguro?">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Borrar</a>
            </div>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>
<%% if @<%= plural_table_name %>.size == 0 %>
    <em>No se encontraron registros</em>
<%% end %>
<br>