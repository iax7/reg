  <tbody>
    <% @transports.each do |transport| %>
      <tr class="text-right">
        <td><%= transport.person.id %></td>
        <td class="text-left"><%= transport.person.full_name %></td>
        <td class="text-left"><%= render_bool transport.person.isconfirmed %></td>
        <td><%= dimzeros transport.v1 %></td>
        <td><%= dimzeros transport.v2 %></td>
        <td><%= dimzeros transport.s1 %></td>
        <td><%= dimzeros transport.s2 %></td>
        <td><%= dimzeros transport.d1 %></td>
        <td><%= dimzeros transport.d2 %></td>
        <td><%= dimzeros transport.l1 %></td>
        <td><%= dimzeros transport.l2 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @transports.size == 0 %>
    <em>No se encontraron registros</em>
<% end %>
