<% content_for :title do %>Ingresar<% end %>
<div class="container" style="width: 300px">
  <form class="form-horizontal" action="/login" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <h2>Ingresar</h2>

    <%= email_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control input-sm', autofocus: true, required: true %>
    <%= password_field_tag :password, nil, class: 'form-control input-sm', placeholder: 'Contraseña', required: true %>
    <%= link_to 'Recuperar contraseña', recover_url, style: 'color: #777;' %>

    <div class="form-group">
      <div class="col-md-offset-6 col-md-6">
        <%= submit_tag 'Aceptar', class: 'btn btn-sm btn-primary btn-block' %>
      </div>
    </div>
  </form>

</div> <!-- /container -->