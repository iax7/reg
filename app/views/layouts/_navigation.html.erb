            <li><%= link_to 'Salir <i class="fa fa-sign-out fa-fw" aria-hidden="true"></i>'.html_safe, logout_url %></li>
        <% else %>
            <%= nav_li_link '<i class="fa fa-sign-in fa-fw" aria-hidden="true"></i> Ingresar'.html_safe, login_url %>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
  <script>
    $(function() {
        var active_li = $('#navMain li').find(".active");
        if (active_li.parent().attr("class") == "dropdown-menu")
          $('#mnuAdmin').addClass("active");
      });
  </script>
