<h1>Events</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to fa_text(:eye), event, class: 'btn btn-primary btn-sm' %>
            <%= link_to fa_text(:edit), edit_event_path(event), class: 'btn btn-primary btn-sm' %>
            <%= link_to fa_text(:trash), event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Event', new_event_path, class: 'btn btn-link' %>

<br>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mainModal">Small modal</button>
<%= render 'layouts/modal', layout: false, locals: {title: 'Hola'} %>