      <div class="row">
        <%= f.label :d3, class: food_class_label %>
        <div class="<%= common_class_input %>"><%= f.number_field :d3, min: 0, class: 'form-control input-sm' %></div>
        <div class="<%= common_class_input %>"><%= f.number_field :d3c, min: 0, class: 'form-control input-sm' %></div>
      </div>
    </div><div class="lunes-text"><h4>Lunes</h4>  <%#--   LUNES ---------------------------%>
      <div class="row">
