        <div class="<%= headers_offsetclass_div + common_class_input %>">Adultos</div>
        <div class="<%= common_class_input %>">Niños</div>
      </div>
      <div class="row">
        <%= f.label :d1, class: food_class_label %>
        <div class="<%= common_class_input %>"><%= f.number_field :d1, min: 0, class: 'form-control input-sm' %></div>
        <div class="<%= common_class_input %>"><%= f.number_field :d1c, min: 0, class: 'form-control input-sm' %></div>
      </div>
      <div class="row">
        <%= f.label :d2, class: food_class_label %>
