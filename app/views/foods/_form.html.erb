      </div>
      <%# div class="row">
        <%= f.label :l2, class: food_class_label >
        <div class="<common_class_input>"><%= f.number_field :l2, min: 0, class: 'form-control input-sm' ></div>
        <div class="<common_class_input>"><%= f.number_field :l2c, min: 0, class: 'form-control input-sm' ></div>
      </div>
