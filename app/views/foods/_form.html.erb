        <%= f.label :l3, class: food_class_label >
        <div class="<common_class_input>"><%= f.number_field :l3, min: 0, class: 'form-control input-sm' ></div>
        <div class="<common_class_input>"><%= f.number_field :l3c, min: 0, class: 'form-control input-sm' ></div>
      </div %>
    </div><br>

  <% if @food.errors.any? %>
    <div class="alert alert-danger fade in no-border">
      <h2><%= pluralize(@food.errors.count, 'error impidió', 'errores impidieron') %> que se guardara el registro:</h2>

      <ul>
      <% @food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <div class="col-xs-offset-2 col-md-offset-2 col-xs-6">
        <div id="actions">
          <%= f.submit 'Aceptar', data: { disable_with: 'Procesando...' }, class: 'btn btn-sm btn-primary', id: 'submit_ajax' %>
          <%= link_to 'Cancelar', get_start, { class: 'btn btn-sm btn-link' }  %>
        </div>
        <%= image_tag image_path('spinners/spinner.gif'), id: 'spinner', style: 'display:none', alt: 'Waiting...' %>
      </div>
    </div>
<% end %>
