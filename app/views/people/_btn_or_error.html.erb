    <div class="panel panel-primary">
      <div class="panel-heading"><strong>Modificaci√≥n Desactivada</strong></div>
      <% if messages.length > 0 %>
          <div class="panel-body">
            <ul>
              <% messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
