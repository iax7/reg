<h2>Personas Inscritas - Comentarios</h2>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
    <tr>
      <th>Id</th>
      <th>Nombre Completo</th>
      <th>Ciudad</th>
      <th data-toggle="tooltip" data-placement="top" title="Enviar Email">Em</th>
      <th data-toggle="tooltip" data-placement="top" title="# Invitados">#I</th>
      <th>Comentarios</th>
    </tr>
    </thead>
    <tbody>
    <% @people.each do |p| %>
    <tr class="<%= p.isconfirmed ? 'info' : '' %>">
      <td><%= p.id %></td>
      <td><%= p.full_name false %></td>
      <td><%= p.city %></td>
      <td><%= mail_to p.email, '<i class="fa fa-envelope-o" aria-hidden="true"></i>'.html_safe %></td>
      <td><%= p.guests.length %></td>
      <td><%= simple_format p.comments %></td>
    </tr>
    <% end %>
    </tbody>
</table>
  <% if @people.size == 0 %>
      <em>No se encontraron registros</em>
  <% end %>
  <br>
</div>